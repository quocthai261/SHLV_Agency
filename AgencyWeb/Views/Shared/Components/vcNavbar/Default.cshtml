<style>
    .progress-vertical {
        position: relative;
        padding: 0 1rem 0 3.5rem;
        list-style: none;
    }

    .progress__item {
        position: relative;
        min-height: 50px;
        counter-increment: list;
        cursor: pointer;
    }

    .progress__item.last-item {
        min-height: 20px;
    }

        .progress__item:before {
            content: "";
            position: absolute;
            left: -1.65rem;
            top: 28px;
            height: 40%;
            width: 1px;
            border-left: 1px solid #725dcf;
        }

        .progress__item:after {
            content: counter(list);
            position: absolute;
            top: 0;
            left: -2.5rem;
            width: 26px;
            height: 26px;
            border-radius: 50%;
            background: transparent;
            color: #725dcf;
            font-weight: 400;
            font-size: 13px;
            line-height: 1.3rem;
            text-align: center;
            border: 1px solid #725dcf;
        }

    .progress__item--completed:after {
        content: "\2713";
        font-weight: 400;
        background: #725dcf;
        color: #fff;
    }

    .progress__item--active:after {
        background: #725dcf;
        color: #fff;
    }

    .progress-vertical li:last-child:before {
        border: none;
    }

    .progress__title {
        text-align: left;
    }
</style>

