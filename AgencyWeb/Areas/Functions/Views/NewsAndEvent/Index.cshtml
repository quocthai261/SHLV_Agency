@model List<AgencyWeb.Areas.Functions.Models.NewsAndEventDto>;

<div class="container-fluid p-0"
     ast-blocks-layout="true" itemprop="text">
    <div style="margin-bottom:2em;padding-top:0px;padding-right:0px;padding-bottom:0em;padding-left:0px">
        <span aria-hidden="true" class="wp-block-cover__background has-background-dim-0 has-background-dim"></span><img decoding="async" fetchpriority="high" width="1400" height="475" class="wp-block-cover__image-background wp-image-405" alt="" src="https://pws-prod.shinhanlifevn.com.vn/wordpress/wp-content/uploads/2023/06/press-release.jpg" data-object-fit="cover" srcset="https://shinhanlifevn.com.vn/wp-content/uploads/2023/06/press-release.jpg 1400w, https://shinhanlifevn.com.vn/wp-content/uploads/2023/06/press-release-300x102.jpg 300w, https://shinhanlifevn.com.vn/wp-content/uploads/2023/06/press-release-1024x347.jpg 1024w, https://shinhanlifevn.com.vn/wp-content/uploads/2023/06/press-release-768x261.jpg 768w, https://shinhanlifevn.com.vn/wp-content/uploads/2023/06/press-release-18x6.jpg 18w" sizes="(max-width: 1400px) 100vw, 1400px" />
    </div>
</div>
<div class="container-fluid p-0">
    <h1 class="h4 mb-3 form-title"><strong>Tin tức và sự kiện</strong></h1>
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-6 col-md-6 col-xxl-6 d-flex order-6 order-xxl-6">
                <div class="card flex-fill w-100 form-control-ui">
                    <div class="card-body py-3">
                        <div class="row">
                            <img decoding="async" width="900" height="600" src="@p.Image" />
                            <p class="newsTitle"><strong><a href="https://shinhanlifevn.com.vn/shinhan-life-viet-nam-tiep-tuc-dong-hanh-cung-benh-nhi-ung-thu-mau-trong-dip-tet-doan-vien/" data-type="page" data-id="1162">@p.Title</a></strong></p>
                            <p class="newsPublishedDate">@p.PublishedDate</p>
                            <p class="newsSummary">@p.Summary</p>
                                <a asp-controller="NewsAndEvent" asp-action="NewsAndEventDetail" asp-route-id="@p.NewsAndEventId">
                                    <p class="newsDetail">Tìm hiểm thêm</p></a>
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div> <!-- ast-container -->
</div>
