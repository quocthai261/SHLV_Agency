@using AgencyWeb.Models
@using AgencyWeb.Areas.Functions.Controllers
@using Microsoft.AspNetCore.Mvc.Localization

@inject IHtmlLocalizer<CustomerController> HtmlLocalizer

@{
    var confirmDeleteMessage = String.Format(@HtmlLocalizer["ConfirmDeleteMessage"].Value);
    var confirmDeleteTitle = String.Format(@HtmlLocalizer["ConfirmDeleteTitle"].Value);
}

<div class="container-fluid p-0" id="partialViewStep">
    <h1 class="h5 mb-3 form-title">
        Bảng minh họa
        <i class="fa fa-caret-right" aria-hidden="true"></i>
        <strong>Thông tin sản phẩm</strong>
    </h1>
    <div class="row">
        <div class="col-12 col-md-12 col-xxl-6 d-flex order-3 order-xxl-2">
            <ul class="progressbar five-step">
                <li class="active" onclick="onProgressBarClicked('QuoDetailPolicyOwnerPartialView')">Bên mua bảo hiểm</li>
                <li class="active" onclick="onProgressBarClicked('QuoDetailChooseProductPartialView')">Chọn sản phẩm</li>
                <li class="active" onclick="onProgressBarClicked('QuoDetailLifeAssuredPartialView')">Người được bảo hiểm</li>
                <li class="active" onclick="onProgressBarClicked('QuoDetailProductInfomationPartialView')">Thông tin sản phẩm</li>
                <li onclick="onProgressBarClicked('QuoDetailInformationPartialView')">Thông tin chi tiết</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-12 col-xxl-6 d-flex order-3 order-xxl-2">
            <div class="card card-body form-control-ui">
                <div class="collapse show" id="collapse01">
                    <div class="row">
                        <div class="row button-right-row">
                            <div class="col-md-12">
                                <button class="btn btn-purple-style" type="submit">Tính phí</button>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="form-group" style="text-align: center;">
                                <label for="radio-card-type-1" class="radio-card">
                                    <input type="radio" name="radio-card-type" id="radio-card-type-1" checked />
                                    <div class="card-content-wrapper card-small">
                                        <span class="check-icon"></span>
                                        <div class="card-content">
                                            <h2 style="margin-top:0px" class="card-title-product">300.000</h2>
                                            <h5 class="card-title-product">Tháng</h5>
                                        </div>
                                    </div>
                                </label>
                                <!-- /.radio-card -->
                                <label for="radio-card-type-2" class="radio-card">
                                    <input type="radio" name="radio-card-type" id="radio-card-type-2" checked />
                                    <div class="card-content-wrapper card-small">
                                        <span class="check-icon"></span>
                                        <div class="card-content">
                                            <h2 style="margin-top:0px" class="card-title-product">1.200.000</h2>
                                            <h5 class="card-title-product">Quý</h5>
                                        </div>
                                    </div>
                                </label>
                                <label for="radio-card-type-3" class="radio-card">
                                    <input type="radio" name="radio-card-type" id="radio-card-type-3" checked />
                                    <div class="card-content-wrapper card-small">
                                        <span class="check-icon"></span>
                                        <div class="card-content">
                                            <h2 style="margin-top:0px" class="card-title-product">1.800.000</h2>
                                            <h5 class="card-title-product">Nửa Năm</h5>
                                        </div>
                                    </div>
                                </label>
                                <label for="radio-card-type-4" class="radio-card">
                                    <input type="radio" name="radio-card-type" id="radio-card-type-4" checked />
                                    <div class="card-content-wrapper card-small">
                                        <span class="check-icon"></span>
                                        <div class="card-content">
                                            <h2 style="margin-top:0px" class="card-title-product">3.400.000</h2>
                                            <h5 class="card-title-product">Năm</h5>
                                        </div>
                                    </div>
                                </label>
                            </div>
                       </div>                    
                    </div>
                </div>
                <p>
                    <a class="form-title" data-bs-toggle="collapse" href="#collapse02" role="button" aria-expanded="false" aria-controls="collapseExample">
                        <strong>Sản phẩm chính</strong>
                    </a>
                </p>
                <div class="collapse show" id="collapse02">
                    <div class="row">
                        <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                            <div class="form-group">
                                @(Html.DevExtreme().SelectBox()
                                //.DataSource(d => d.WebApi().Area("Functions").Controller("Product").LoadAction("GetPaymodeList"))
                                    //.DisplayExpr("PayModeName")
                                    //.ValueExpr("PayModeID")
                                    .Placeholder("Chọn")
                                    .SearchEnabled(true).Label("Shinhan - Sống khỏe").LabelMode(EditorLabelMode.Floating)
                                    .ShowClearButton(true).ReadOnly(true).ElementAttr("class", "required-validation")
                                    )
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-2 col-xl-2">
                            <div class="form-group">
                                @(Html.DevExtreme().NumberBox().ElementAttr("class", "required-validation")
                                    .Label("Số tiền bảo hiểm").Value(236000).LabelMode(EditorLabelMode.Floating)
                                    .Min(0).Max(99999999999).ReadOnly(true).Format(Format.FixedPoint))
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-2 col-xl-2">
                            <div class="form-group">
                                @(Html.DevExtreme().NumberBox().ElementAttr("class", "required-validation")
                                    .Label("Thời hạn bảo hiểm (Năm)").Value(1).LabelMode(EditorLabelMode.Floating)
                                    .Min(0).Max(99999999999).ReadOnly(true).Format(Format.FixedPoint))
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-2 col-xl-2">
                            <div class="form-group">
                                @(Html.DevExtreme().NumberBox().ElementAttr("class", "required-validation")
                                    .Label("Thời hạn đóng phí (Năm)").Value(1).LabelMode(EditorLabelMode.Floating)
                                    .Min(0).Max(99999999999).ReadOnly(true).Format(Format.FixedPoint))
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-2 col-xl-2">
                            <div class="form-group">
                                @(Html.DevExtreme().NumberBox().ElementAttr("class", "required-validation")
                                    .Label("Phí bảo hiểm định kỳ").Value(236000).LabelMode(EditorLabelMode.Floating)
                                    .Min(0).Max(99999999999).ReadOnly(true).Format(Format.FixedPoint))
                            </div>
                        </div>
                    </div>
                </div>
                <p>
                    <a class="form-title" data-bs-toggle="collapse" href="#collapse03" role="button" aria-expanded="false" aria-controls="collapseExample">
                        <strong>Sản phẩm bổ sung</strong>
                    </a>
                </p>
                <div class="collapse show" id="collapse03">
                    <div class="row button-left-row">
                        <div class="col-md-12">
                            <button class="btn btn-purple-style" type="submit" onclick="onPopupAddNewRiderClicked()" style="margin: 10px 0px !important;"><span class="glyphicon glyphicon-plus"></span> Thêm sản phẩm bổ sung</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            @(Html.DevExtreme().DataGrid()
                                    .ID("gridRiderByCustomerList")
                                    .DataSource(d => d.WebApi()
                                    .Area("Functions")
                                    .Controller("Quotation")
                                    .LoadAction("GetRiderByCustomerList")
                                    .Key("RiderID")
                                    )
                                    .ShowBorders(true)
                                    .Selection(s => s.Mode(SelectionMode.Single))
                                    .Editing(editing =>
                                    {
                                        editing.Texts(textBuilder =>
                                    {
                                        textBuilder.ConfirmDeleteMessage(confirmDeleteMessage);
                                        textBuilder.ConfirmDeleteTitle(confirmDeleteTitle);
                                    });
                                    })
                                    .Columns(columns =>
                                    {
                                        columns.Add().Caption("").Width(70)
                                        .CellTemplate(@<text>
                                           <span class="glyphicon glyphicon-edit icon-grid"></span>  <span class="glyphicon glyphicon-trash icon-grid"></span>
                                        </text>);
                                        columns.Add().DataField(nameof(RiderByCustomerModel.RiderID)).Visible(false);
                                        columns.Add().DataField(nameof(RiderByCustomerModel.Group)).GroupCellTemplate(new JS("function(element, options) { element.text(options.value); }")).GroupIndex(0);
                                        columns.Add().DataField(nameof(RiderByCustomerModel.ProductName)).Caption("Tên sản phẩm bổ sung");
                                        columns.Add().DataField(nameof(RiderByCustomerModel.SumAssured)).Caption("Số tiền bảo hiểm").DataType(GridColumnDataType.Number).Format(Format.FixedPoint).Alignment(HorizontalAlignment.Right).Width(170);
                                        columns.Add().DataField(nameof(RiderByCustomerModel.PolicyTerm)).Caption("Thời hạn bảo hiểm").Caption("Thời hạn đóng phí").DataType(GridColumnDataType.Number).Format(Format.FixedPoint).Alignment(HorizontalAlignment.Right).Width(170);
                                        columns.Add().DataField(nameof(RiderByCustomerModel.PremiumTerm)).Caption("Thời hạn đóng phí").DataType(GridColumnDataType.Number).Format(Format.FixedPoint).Alignment(HorizontalAlignment.Right).Width(170);
                                        columns.Add().DataField(nameof(RiderByCustomerModel.Premium)).Caption("Định kỳ đóng phí").DataType(GridColumnDataType.Number).Format(Format.FixedPoint).Alignment(HorizontalAlignment.Right).Width(170);
                                    })
                                .ColumnHidingEnabled(true)
                                .AllowColumnResizing(true)
                                .ColumnAutoWidth(true)
                                .ColumnMinWidth(50)
                                .ShowRowLines(true)
                                .FilterRow(f => f.Visible(false))
                                .HeaderFilter(f => f.Visible(false))
                                .GroupPanel(p => p.Visible(false))
                                .Grouping(g => g.AutoExpandAll(true))
                                .RemoteOperations(false)
                                .Paging(paging => paging.PageSize(10))
                                .Pager(pager =>
                                {
                                    pager.ShowPageSizeSelector(true);
                                    pager.AllowedPageSizes(new[] { 5, 10, 20 });
                                    pager.ShowInfo(true);
                                })
                                )
                        </div>
                    </div>
                </div>
                <div class="row button-search-row">
                    <div class="col-md-12">
                        <button class="btn btn-purple-style" type="submit" onclick="onProgressBarClicked('QuoDetailLifeAssuredPartialView')"><span class="glyphicon glyphicon-triangle-left"></span> Trở về</button>
                        <button class="btn btn-purple-style" type="submit" onclick="onProgressBarClicked('QuoDetailInformationPartialView')">Tiếp theo <span class="glyphicon glyphicon-triangle-right"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

