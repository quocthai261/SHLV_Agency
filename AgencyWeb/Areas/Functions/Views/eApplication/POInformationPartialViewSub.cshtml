<div class="row">
    <div class="col-12 col-md-12 col-xxl-6 d-flex order-3 order-xxl-2">
        <div class="card card-body form-control-ui">
            <p>
                <a class="form-title">
                    <strong>Thông tin cơ bản</strong>
                </a>
            </p>
            <div>
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox()
                                .ElementAttr("class", "required-validation")
                                .Label("Họ và tên").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50).ShowClearButton(true)
                                .Value("TRẦN THỊ VÂN HƯƠNG")
                                .ReadOnly(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox()
                                //.DataSource(d => d.WebApi().Area("Functions").Controller("eApplication").LoadAction("GetGenderList"))
                                //.DisplayExpr("GenderName")
                                //.ValueExpr("GenderCode")
                                .Placeholder("Chọn")
                                .SearchEnabled(true).Label("Giới tính").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true).ElementAttr("class", "required-validation")
                                .DisplayExpr("Name")
                                .ValueExpr("Code")
                                .Value("2")
                                .DataSource(new object[] {
                                    new { Code = "1", Name = "Nam"},
                                    new { Code = "2", Name = "Nữ"},
                                })
                                .ReadOnly(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().DateBox()
                                .Type(DateBoxType.Date)
                                .DisplayFormat("dd/MM/yyyy")
                                .UseMaskBehavior(true)
                                .Placeholder("dd/mm/yyyy")
                                .Label("Ngày tháng năm sinh").LabelMode(EditorLabelMode.Floating)
                                .Value(DateTime.Now.AddYears(-25))
                                .ElementAttr("class", "required-validation").ShowClearButton(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox()
                                //.DataSource(d => d.WebApi().Area("Functions").Controller("eApplication").LoadAction("GetMarriageStatusList"))
                                //.DisplayExpr("MarriageName")
                                //.ValueExpr("MarriageCode")
                                .Placeholder("Chọn")
                                .SearchEnabled(true).Label("Tình trạng hôn nhân").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true).ElementAttr("class", "required-validation")
                                .DisplayExpr("Name")
                                .ValueExpr("Code")
                                .Value("1")
                                .DataSource(new object[] {
                                        new { Code = "1", Name = "Đã kết hôn"},
                                        new { Code = "2", Name = "Độc thân"},
                                })
                                .ReadOnly(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox()
                                //.DataSource(d => d.WebApi().Area("Functions").Controller("eApplication").LoadAction("GetCityList"))
                                //.DisplayExpr("CityName")
                                //.ValueExpr("CityCode")
                                .Placeholder("Chọn")
                                .SearchEnabled(true).Label("Nơi sinh").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true).ElementAttr("class", "required-validation")
                                .DisplayExpr("Name")
                                .ValueExpr("Code")
                                .Value("1")
                                .DataSource(new object[] {
                                    new { Code = "1", Name = "An Giang"},
                                    new { Code = "2", Name = "TP.HCM"},
                                })
                                .ReadOnly(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox()
                                //.DataSource(d => d.WebApi().Area("Functions").Controller("eApplication").LoadAction("GetNationalityList"))
                                //.DisplayExpr("Name")
                                //.ValueExpr("Code")
                                .Placeholder("Chọn")
                                .SearchEnabled(true).Label("Quốc tịch").LabelMode(EditorLabelMode.Floating)
                                .DisplayExpr("Name")
                                .ValueExpr("Code")
                                .Value("1")
                                .DataSource(new object[] {
                                    new { Code = "1", Name = "Việt Nam"},
                                    new { Code = "2", Name = "Mỹ"},
                                })
                                .ShowClearButton(true).ElementAttr("class", "required-validation")
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox()
                                .Label("Quốc tịch khác (Nếu có)").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50).ShowClearButton(true)
                                .ReadOnly(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox()
                                //.DataSource(d => d.WebApi().Area("Functions").Controller("eApplication").LoadAction("GetCertiTypeList"))
                                //.DisplayExpr("CertiTypeCode")
                                //.ValueExpr("CertiTypeCode")
                                .Placeholder("Chọn")
                                .SearchEnabled(true).Label("Loại giấy tờ tùy thân").LabelMode(EditorLabelMode.Floating)
                                .DisplayExpr("Name")
                                .ValueExpr("Code")
                                .Value("1")
                                .DataSource(new object[] {
                                    new { Code = "1", Name = "CMND"},
                                    new { Code = "2", Name = "Giấy khai sinh"},
                                })
                                .ShowClearButton(true).ElementAttr("class", "required-validation")
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().CheckBox().Value(true).IconSize(18).ElementAttr("aria-label", "Custom size")
                                .Text("Số giấy tờ tùy thân"))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox()
                                .ElementAttr("class", "required-validation")
                                .Label("Số giấy tờ tùy thân").LabelMode(EditorLabelMode.Floating)
                                .Value("123456789")
                                .MaxLength(15).ShowClearButton(true))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().DateBox()
                                .Type(DateBoxType.Date)
                                .DisplayFormat("dd/MM/yyyy")
                                .UseMaskBehavior(true)
                                .Placeholder("dd/mm/yyyy")
                                .Label("Ngày cấp").LabelMode(EditorLabelMode.Floating)
                                .Value(new DateTime(2020,9,10))
                                .ElementAttr("class", "required-validation").ShowClearButton(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox()
                            //.DataSource(d => d.WebApi().Area("Functions").Controller("Product").LoadAction("GetPaymodeList"))
                                //.DisplayExpr("PayModeName")
                                //.ValueExpr("PayModeID")
                                .DisplayExpr("Name")
                                .ValueExpr("Code")
                                .Value("1")
                                .DataSource(new object[] {
                                    new { Code = "1", Name = "An Giang"},
                                    new { Code = "2", Name = "TP.HCM"},
                                })
                                .Placeholder("Chọn")
                                .SearchEnabled(true).Label("Nơi cấp").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true).ElementAttr("class", "required-validation")
                                )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
